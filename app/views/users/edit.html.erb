<% if @user.errors.any? %>
 <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
 <ul>
   <% @user.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-5 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user,url:user_path(@user.id),method: :patch do |f| %>
      <div class="form-group">
        <label for="user_name">Name</label>
        <%= f.text_field:name,class:"form-control" %>
      </div>
      <div class="form-group">
        <label for="user_image">Image</label>
        <%= f.file_field:profile_image,class:"form-control-file" %>
      </div>
      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area:introduction,class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update User",class:"btn btn-secondary" %>
      </div>
    <% end %>
    </div>
  </div>
</div>